#!/usr/bin/env perl6

use v6;

use CucumisSextus::Gherkin;

sub MAIN(*@features) {
    for @features -> $f {
        my $path = IO::Path.new($f);
        if $path.d {
            say "# d $f";
            # XXX find all feature files underneath and add to list
        }
        elsif $path.f {
            say "# f $f";
            # XXX add to list
        }
        else {
            say "# could not find $f";
            # XXX mark as error, bail out later (before executing any features) 
            # if there were errors
        }
    }
    # XXX sort list
    # XXX execute each feature, finding and loading the appropriate glue code as well
}
